{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": ".",
        "allowJs": false,
        "declaration": false,
        "sourceMap": false,
        "inlineSourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "strictNullChecks": false,
        "outDir": "./dist",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "typeRoots": [
            "./customTypes",
            "./node_modules/@types"
        ],
        "removeComments": false
    },
    "include": [
        "src/**/*"
    ]
}